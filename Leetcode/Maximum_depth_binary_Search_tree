# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def maxDepth(self, root: TreeNode) -> int:
        def dfs(node, depth):
            if(node == None):
                return depth-1
            temp1 = dfs(node.left, depth+1)
            temp2 = dfs(node.right, depth+1)
            return max(temp1, temp2) 
        return dfs(root, 1)
        
